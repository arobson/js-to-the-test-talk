									title = $title.val().trim(),
									speaker = $speaker.val().trim(),
									$form = $( "#form" ),
									$add = $form.find( "#add" ),
									$list = $( "#list" ),
									$dt = $( "<dt>" + title + "</dt>" ),
									$dd = $( "<dd>" + speaker + "</dd>" );
										
								if( !$add.attr( "disabled" ) ) {
									$list.append( $dt );
									$list.append( $dd );
									$title.val("");
									$speaker.val("");
									$add.attr( "disabled", "disabled" );
								}
							} );
					section
