{
	"source": "src",
	"output": "presentation",
	"anvil.http": {
		"paths": {
			"/reveal": "./reveal",
			"/ace": "./ace",
			"/": "./presentation",
			"/testable": "./testable/site",
			"/testable/spec": "./testable/spec",
			"/untestable": "./untestable/site",
			"/untestable/spec": "./untestable/spec"
		}
	},
	"combiner": {
		"patterns": [
			{
				"extensions": [ ".jade" ],
				"find": "/import.?'.*'.?/g",
				"replace": "/([ \t]*)import.?'replace'.?/g"
			}
		]
	},
	"dependencies": [
		"anvil.http",
		"anvil.jade"
	]
}